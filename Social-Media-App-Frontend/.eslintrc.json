{
  "root": true,
  "extends": [
    "airbnb",
    "airbnb/hooks"
  ],
  "env": {
    "browser": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-hooks",
    "import"
  ],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "rules": {
    "strict": "off",
    "quotes": ["error", "single"],
    "no-console": "off",
    "no-else-return": "off",
    "no-underscore-dangle": "off",
    "max-len": "off",
    "arrow-body-style": "off",
    "prefer-destructuring": "warn",
    "class-methods-use-this": "off",
    "no-plusplus": "off",
    "no-use-before-define": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always",
        "jsx": "never"
      }
    ],
    "import/no-unresolved": "error",
    "import/no-extraneous-dependencies": "off"
  }
}
