{
  "root": true,
  "extends": "airbnb-base",
  "env": {
    "browser": false,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["import"],
  "rules": {
    "strict": 0,
    "quotes": [2, "single"],
    "no-else-return": 0,
    "new-cap": ["error", { "capIsNewExceptions": ["Router"] }],
    "no-console": 0,
    "import/no-unresolved": [2, { "caseSensitive": false }],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always"
      }
    ],
    "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
    "no-underscore-dangle": 0,
    "arrow-body-style": ["error", "always"],
    "no-shadow": [
      "error",
      { "allow": ["done", "res", "cb", "err", "resolve", "reject"] }
    ],
    "no-use-before-define": ["error", { "functions": false }],
    "max-len": 0,
    "no-param-reassign": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      }
    }
  }
}
